# font_family Input Mono Narrow
font_size 13
# font_features Iosevka cv98=3 VLAA=2
# font_features Iosevka-Bold cv98=3 VLAA=2
# font_features Iosevka-Bold-Italic cv98=3 VLAA=2
# font_features Iosevka-Italic cv98=3 VLAA=2
adjust_line_height 106%

disable_ligatures cursor

cursor_shape block
shell_integration no-cursor

remember_window_size  no
initial_window_width 860
initial_window_height 650
enabled_layouts fat:bias=70,tall:bias=60
map ctrl+left resize_window wider
map ctrl+right resize_window narrower
map ctrl+up resize_window taller
map ctrl+down resize_window shorter
map ctrl+home resize_window reset
# padding placement
placement_strategy center
hide_window_decorations yes

#background_opacity 0.9

tab_bar_edge top
tab_bar_min_tabs 2
tab_bar_style slant
active_tab_font_style bold

map kitty_mod+enter launch --cwd=current
map kitty_mod+t     new_tab_with_cwd
map kitty_mod+n     new_os_window_with_cwd

linux_display_server wayland

# BEGIN_KITTY_THEME
# Catppuccin-Mocha
include current-theme.conf
# END_KITTY_THEME

# BEGIN_KITTY_FONTS
font_family      family="JetBrains Mono NL"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS

# Nerd Fonts v3.2.0
symbol_map U+e000-U+e00a,U+ea60-U+ebeb,U+e0a0-U+e0c8,U+e0ca,U+e0cc-U+e0d7,U+e200-U+e2a9,U+e300-U+e3e3,U+e5fa-U+e6b1,U+e700-U+e7c5,U+ed00-U+efc1,U+f000-U+f2ff,U+f000-U+f2e0,U+f300-U+f372,U+f400-U+f533,U+f0001-U+f1af0 Symbols Nerd Font Mono
